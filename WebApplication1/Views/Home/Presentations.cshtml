                    <!-- Presentation Item 4 -->
                    <div class="presentation-item">
                        <div class="presentation-thumbnail">
                            <img src="https://via.placeholder.com/300x200?text=Presentation+4" alt="Presentation 4">
                            <div class="presentation-actions">

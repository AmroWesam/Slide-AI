@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SlideCraft Pro - Interactive Presentation Platform</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/presentation.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="/js/script.js" defer></script>
    <script src="/js/presentation.js" defer></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('file-upload').addEventListener('change', function() {
                if (this.files.length > 0) {
                    document.getElementById('presentation-form').submit();
                }
            });
            
            // Drag and drop support
            const uploadBox = document.querySelector('.upload-box');
            
            uploadBox.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadBox.classList.add('drag-over');
            });
            
            uploadBox.addEventListener('dragleave', () => {
                uploadBox.classList.remove('drag-over');
            });
            
            uploadBox.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadBox.classList.remove('drag-over');
                
                if (e.dataTransfer.files.length > 0) {
                    document.getElementById('file-upload').files = e.dataTransfer.files;
                    document.getElementById('presentation-form').submit();
                }
            });
        });
    </script>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <h1><i class="fas fa-file-powerpoint"></i> SlideCraft Pro</h1>
            </div>
            <ul class="nav-links">
                <li><a href="/Home/Index">Home</a></li>
                <li><a href="/Home/Presentations" class="active">Presentations</a></li>
                <li><a href="/Home/Dashboard">Dashboard</a></li>
                <li><a href="#features">Features</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="/Home/Login" class="login-link"><i class="fas fa-user"></i> Login</a></li>
                <li><a href="/Home/Register" class="register-link"><i class="fas fa-user-plus"></i> Register</a></li>
            </ul>
            <div class="menu-toggle">
                <i class="fas fa-bars"></i>
            </div>
        </nav>
    </header>

    <main>
        <section id="presentation-hero" class="presentation-hero-section">
            <div class="presentation-hero-content">
                <h1 data-aos="fade-up">SlideCraft Pro</h1>
                <p data-aos="fade-up" data-aos-delay="200">Upload, deliver, and evaluate presentations with AI-powered gesture control and speech recognition.</p>
                <div class="presentation-cta" data-aos="fade-up" data-aos-delay="400">
                    <a href="#upload-section" class="btn primary"><i class="fas fa-upload"></i> Upload Presentation</a>
                    <a href="#my-presentations" class="btn secondary"><i class="fas fa-folder-open"></i> My Presentations</a>
                </div>
            </div>
        </section>

        <section id="upload-section" class="upload-section">
            <div class="container">
                <div class="section-header" data-aos="fade-up">
                    <h2 class="section-title">Upload Presentation</h2>
                    <p class="section-subtitle">Upload your PowerPoint presentations to start using our interactive platform</p>
                </div>
                
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success" role="alert" data-aos="fade-up">
                        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    </div>
                }
                
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert" data-aos="fade-up">
                        <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                    </div>
                }
                
                <!-- معلومات إضافية -->
                @if (TempData["ScriptOutput"] != null)
                {
                    <div id="script-output" style="display:none;">@TempData["ScriptOutput"]</div>
                }

                <div class="upload-container" data-aos="fade-up" data-aos-delay="200">
                    <div class="upload-box">
                        <form id="presentation-form" action="/Presentations/Upload" method="post" enctype="multipart/form-data">
                            <i class="fas fa-cloud-upload-alt"></i>
                            <h3>Drag & Drop Files Here</h3>
                            <p>or</p>
                            <label for="file-upload" class="file-upload-btn">Browse Files</label>
                            <input type="file" name="file" id="file-upload" accept=".ppt, .pptx" hidden>
                            <p class="file-types">Supported file types: .ppt, .pptx</p>
                        </form>
                    </div>

                    <!-- Upload Progress -->
                    <div class="upload-progress hidden">
                        <div class="progress-info">
                            <span class="file-name">presentation.pptx</span>
                            <span class="file-size">2.5 MB</span>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: 0%"></div>
                        </div>
                        <button class="cancel-upload"><i class="fas fa-times"></i> Cancel</button>
                    </div>

                    <!-- Success Notification - Simple Version -->
                    <div class="upload-success hidden">
                        <i class="fas fa-check-circle"></i>
                        <h3>Upload Complete!</h3>
                        <p>Your presentation has been uploaded and converted successfully.</p>
                        <div class="success-actions">
                            <a href="#my-presentations" class="btn secondary">View All Presentations</a>
                            <a href="#" class="btn primary present-now">Present Now</a>
                        </div>
                    </div>

                    <!-- Simple Conversion Log - Only shown after upload -->
                    @if (TempData["ScriptOutput"] != null && !string.IsNullOrEmpty(TempData["ScriptOutput"].ToString()))
                    {
                        <div class="conversion-log" style="margin-top: 20px; background-color: #f8f9fa; padding: 15px; border-radius: 5px; border-left: 5px solid #3498db;">
                            <div class="log-header" style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                                <h4 style="margin: 0;">Conversion Details</h4>
                                <button onclick="toggleLog()" class="btn-sm" style="background: none; border: none; color: #3498db; cursor: pointer;">Show Details</button>
                            </div>
                            <div id="log-content" style="display: none; max-height: 200px; overflow-y: auto; font-family: monospace; font-size: 12px; background-color: #f1f1f1; padding: 10px; border-radius: 3px;">
                                @foreach (var line in TempData["ScriptOutput"].ToString().Split('\n'))
                                {
                                    if (!string.IsNullOrWhiteSpace(line))
                                    {
                                        <div style="margin-bottom: 5px;">@line</div>
                                    }
                                }
                            </div>
                        </div>
                        <script>
                            function toggleLog() {
                                var content = document.getElementById('log-content');
                                var btn = document.querySelector('.log-header button');
                                if (content.style.display === 'none') {
                                    content.style.display = 'block';
                                    btn.textContent = 'Hide Details';
                                } else {
                                    content.style.display = 'none';
                                    btn.textContent = 'Show Details';
                                }
                            }
                        </script>
                    }
                </div>
            </div>
        </section>

        <section id="my-presentations" class="my-presentations-section">
            <div class="container">
                <div class="section-header" data-aos="fade-up">
                    <h2 class="section-title">My Presentations</h2>
                    <p class="section-subtitle">Manage and present your uploaded content</p>
                </div>

                <div class="presentations-filters" data-aos="fade-up" data-aos-delay="100">
                    <div class="search-bar">
                        <input type="text" placeholder="Search presentations...">
                        <i class="fas fa-search"></i>
                    </div>
                    <div class="filter-options">
                        <select class="filter-select">
                            <option value="all">All Categories</option>
                            <option value="recent">Recently Added</option>
                            <option value="presented">Previously Presented</option>
                            <option value="pending">Pending Evaluation</option>
                        </select>
                        <div class="view-toggle">
                            <button class="toggle-btn active" data-view="grid"><i class="fas fa-th"></i></button>
                            <button class="toggle-btn" data-view="list"><i class="fas fa-list"></i></button>
                        </div>
                    </div>
                </div>

                <div class="presentations-grid" data-aos="fade-up" data-aos-delay="200">
                    <!-- Presentation Item 1 -->
                    <div class="presentation-item">
                        <div class="presentation-thumbnail">
                            <img src="https://via.placeholder.com/300x200?text=Presentation+1" alt="Presentation 1">
                            <div class="presentation-actions">

                                <span><i class="fas fa-clock"></i> 18 slides</span>
                            </div>
                            <div class="presentation-stats">
                                <span class="stat"><i class="fas fa-eye"></i> 31 views</span>
                                <span class="stat"><i class="fas fa-star"></i> 4.8/5</span>
                            </div>
                        </div>

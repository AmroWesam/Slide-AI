@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - SlideCraft Pro</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/presentation.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/script.js" defer></script>
    <script src="/js/presentation.js" defer></script>
    <script src="/js/dashboard.js" defer></script>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <h1><i class="fas fa-file-powerpoint"></i> SlideCraft Pro</h1>
            </div>
            <ul class="nav-links">
                <li><a href="/Home/Index">Home</a></li>
                <li><a href="/Home/Presentations">Presentations</a></li>
                <li><a href="/Home/Dashboard" class="active">Dashboard</a></li>
                <li><a href="#settings">Settings</a></li>
                <li><a href="#help">Help</a></li>
                <li class="user-profile">
                    <a href="#profile">
                        <img src="https://via.placeholder.com/30" alt="Profile" class="profile-img">
                        <span>John Doe</span>
                    </a>
                </li>
            </ul>
            <div class="menu-toggle">
                <i class="fas fa-bars"></i>
            </div>
        </nav>
    </header>

    <main class="dashboard-main">
        <aside class="dashboard-sidebar">
            <ul class="sidebar-menu">
                <li class="active"><a href="#overview"><i class="fas fa-tachometer-alt"></i> Overview</a></li>
                <li><a href="#presentations"><i class="fas fa-file-powerpoint"></i> My Presentations</a></li>
                <li><a href="#analytics"><i class="fas fa-chart-line"></i> Analytics</a></li>
                <li><a href="#feedback"><i class="fas fa-comments"></i> Feedback</a></li>
                <li><a href="#settings"><i class="fas fa-cog"></i> Settings</a></li>
                <li><a href="#help"><i class="fas fa-question-circle"></i> Help</a></li>
            </ul>
        </aside>

        <div class="dashboard-content">
            <div class="dashboard-header">
                <h2>Dashboard</h2>
                <div class="header-actions">
                    <div class="date-picker">
                        <span>April 15 - April 20, 2025</span>
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <button class="btn secondary"><i class="fas fa-sync-alt"></i> Refresh</button>
                    <button class="btn primary"><i class="fas fa-upload"></i> New Presentation</button>
                </div>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-file-powerpoint"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Presentations</h3>
                        <div class="stat-value">12</div>
                        <div class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +2 this week
                        </div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-play-circle"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Delivered</h3>
                        <div class="stat-value">8</div>
                        <div class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +3 this week
                        </div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Total Audience</h3>
                        <div class="stat-value">156</div>
                        <div class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +42 this week
                        </div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Avg. Rating</h3>
                        <div class="stat-value">4.7</div>
                        <div class="stat-change positive">
                            <i class="fas fa-arrow-up"></i> +0.2 this week
                        </div>
                    </div>
                </div>
            </div>

            <div class="dashboard-row">
                <div class="dashboard-card performance-chart">
                    <div class="card-header">
                        <h3>Presentation Performance</h3>
                        <div class="card-actions">
                            <button class="card-action-btn"><i class="fas fa-ellipsis-v"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas id="performanceChart"></canvas>
                    </div>
                </div>
                <div class="dashboard-card recent-feedback">
                    <div class="card-header">
                        <h3>Recent Feedback</h3>
                        <div class="card-actions">
                            <button class="card-action-btn"><i class="fas fa-ellipsis-v"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="feedback-item">
                            <div class="feedback-header">
                                <h4>AI in Education</h4>
                                <div class="feedback-rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                    <span>4.5</span>
                                </div>
                            </div>
                            <p class="feedback-text">"Great presentation! The gesture controls were intuitive and made the presentation more engaging."</p>
                            <div class="feedback-meta">
                                <span class="feedback-author">Sarah Johnson</span>
                                <span class="feedback-date">April 18, 2025</span>
                            </div>
                        </div>
                        <div class="feedback-item">
                            <div class="feedback-header">
                                <h4>Modern Teaching Methods</h4>
                                <div class="feedback-rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <span>5.0</span>
                                </div>
                            </div>
                            <p class="feedback-text">"Excellent use of the voice commands and gesture controls. Very impressed with the smooth transitions."</p>
                            <div class="feedback-meta">
                                <span class="feedback-author">Michael Chen</span>
                                <span class="feedback-date">April 15, 2025</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="#feedback" class="view-all">View All Feedback <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>

            <div class="dashboard-row">
                <div class="dashboard-card gesture-analytics">
                    <div class="card-header">
                        <h3>Gesture & Voice Analytics</h3>
                        <div class="card-actions">
                            <button class="card-action-btn"><i class="fas fa-ellipsis-v"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="analytics-grid">
                            <div class="analytics-item">
                                <h4>Gesture Accuracy</h4>
                                <div class="progress-circle" data-value="85">
                                    <div class="progress-circle-inner">
                                        <span class="progress-value">85%</span>
                                    </div>
                                </div>
                                <div class="analytics-trends">
                                    <span class="trend positive"><i class="fas fa-arrow-up"></i> 5%</span>
                                    <span class="trend-period">vs. last month</span>
                                </div>
                            </div>
                            <div class="analytics-item">
                                <h4>Voice Command Accuracy</h4>
                                <div class="progress-circle" data-value="92">
                                    <div class="progress-circle-inner">
                                        <span class="progress-value">92%</span>
                                    </div>
                                </div>
                                <div class="analytics-trends">
                                    <span class="trend positive"><i class="fas fa-arrow-up"></i> 3%</span>
                                    <span class="trend-period">vs. last month</span>
                                </div>
                            </div>
                            <div class="analytics-item">
                                <h4>Gesture Usage</h4>
                                <div class="progress-circle" data-value="78">
                                    <div class="progress-circle-inner">
                                        <span class="progress-value">78%</span>
                                    </div>
                                </div>
                                <div class="analytics-trends">
                                    <span class="trend positive"><i class="fas fa-arrow-up"></i> 8%</span>
                                    <span class="trend-period">vs. last month</span>
                                </div>
                            </div>
                            <div class="analytics-item">
                                <h4>Voice Command Usage</h4>
                                <div class="progress-circle" data-value="65">
                                    <div class="progress-circle-inner">
                                        <span class="progress-value">65%</span>
                                    </div>
                                </div>
                                <div class="analytics-trends">
                                    <span class="trend positive"><i class="fas fa-arrow-up"></i> 12%</span>
                                    <span class="trend-period">vs. last month</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dashboard-card upcoming-presentations">
                    <div class="card-header">
                        <h3>Upcoming Presentations</h3>
                        <div class="card-actions">
                            <button class="card-action-btn"><i class="fas fa-ellipsis-v"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="upcoming-list">
                            <div class="upcoming-item">
                                <div class="upcoming-date">
                                    <div class="date-box">
                                        <span class="date-month">Apr</span>
                                        <span class="date-day">23</span>
                                    </div>
                                </div>
                                <div class="upcoming-details">
                                    <h4>Future of EdTech</h4>
                                    <p class="upcoming-venue">Tech Innovation Conference</p>
                                    <div class="upcoming-meta">
                                        <span><i class="fas fa-clock"></i> 10:30 AM - 12:00 PM</span>
                                        <span><i class="fas fa-map-marker-alt"></i> Virtual</span>
                                    </div>
                                </div>
                                <div class="upcoming-actions">
                                    <button class="btn secondary sm"><i class="fas fa-edit"></i> Edit</button>
                                    <button class="btn primary sm"><i class="fas fa-eye"></i> Preview</button>
                                </div>
                            </div>
                            <div class="upcoming-item">
                                <div class="upcoming-date">
                                    <div class="date-box">
                                        <span class="date-month">Apr</span>
                                        <span class="date-day">25</span>
                                    </div>
                                </div>
                                <div class="upcoming-details">
                                    <h4>Interactive Learning Tools</h4>
                                    <p class="upcoming-venue">Education Summit 2025</p>
                                    <div class="upcoming-meta">
                                        <span><i class="fas fa-clock"></i> 2:00 PM - 3:30 PM</span>
                                        <span><i class="fas fa-map-marker-alt"></i> Grand Conference Center</span>
                                    </div>
                                </div>
                                <div class="upcoming-actions">
                                    <button class="btn secondary sm"><i class="fas fa-edit"></i> Edit</button>
                                    <button class="btn primary sm"><i class="fas fa-eye"></i> Preview</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="#calendar" class="view-all">View Calendar <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>

            <div class="dashboard-row">
                <div class="dashboard-card recent-presentations">
                    <div class="card-header">
                        <h3>Recent Presentations</h3>
                        <div class="card-actions">
                            <div class="filter-dropdown">
                                <button class="filter-btn"><i class="fas fa-filter"></i> Filter</button>
                                <div class="dropdown-menu">
                                    <a href="#" data-filter="all" class="active">All</a>
                                    <a href="#" data-filter="published">Published</a>
                                    <a href="#" data-filter="drafts">Drafts</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="presentations-table">
                            <thead>
                                <tr>
                                    <th>Presentation</th>
                                    <th>Date</th>
                                    <th>Audience</th>
                                    <th>Rating</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="presentation-cell">
                                            <img src="https://via.placeholder.com/40?text=1" alt="Presentation thumbnail">
                                            <span>AI in Education</span>
                                        </div>
                                    </td>
                                    <td>Apr 18, 2025</td>
                                    <td>32</td>
                                    <td>
                                        <div class="table-rating">
                                            <i class="fas fa-star"></i>
                                            <span>4.5</span>
                                        </div>
                                    </td>
                                    <td><span class="status-badge completed">Completed</span></td>
                                    <td>
                                        <div class="table-actions">
                                            <button class="action-btn"><i class="fas fa-eye"></i></button>
                                            <button class="action-btn"><i class="fas fa-edit"></i></button>
                                            <button class="action-btn"><i class="fas fa-share-alt"></i></button>
                                            <div class="action-menu-trigger">
                                                <button class="action-btn"><i class="fas fa-ellipsis-v"></i></button>
                                                <div class="action-menu">
                                                    <a href="#"><i class="fas fa-copy"></i> Duplicate</a>
                                                    <a href="#"><i class="fas fa-download"></i> Download</a>
                                                    <a href="#" class="text-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="presentation-cell">
                                            <img src="https://via.placeholder.com/40?text=2" alt="Presentation thumbnail">
                                            <span>Modern Teaching Methods</span>
                                        </div>
                                    </td>
                                    <td>Apr 15, 2025</td>
                                    <td>28</td>
                                    <td>
                                        <div class="table-rating">
                                            <i class="fas fa-star"></i>
                                            <span>5.0</span>
                                        </div>
                                    </td>
                                    <td><span class="status-badge completed">Completed</span></td>
                                    <td>
                                        <div class="table-actions">
                                            <button class="action-btn"><i class="fas fa-eye"></i></button>
                                            <button class="action-btn"><i class="fas fa-edit"></i></button>
                                            <button class="action-btn"><i class="fas fa-share-alt"></i></button>
                                            <div class="action-menu-trigger">
                                                <button class="action-btn"><i class="fas fa-ellipsis-v"></i></button>
                                                <div class="action-menu">
                                                    <a href="#"><i class="fas fa-copy"></i> Duplicate</a>
                                                    <a href="#"><i class="fas fa-download"></i> Download</a>
                                                    <a href="#" class="text-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="presentation-cell">
                                            <img src="https://via.placeholder.com/40?text=3" alt="Presentation thumbnail">
                                            <span>Student Engagement Strategies</span>
                                        </div>
                                    </td>
                                    <td>Apr 10, 2025</td>
                                    <td>45</td>
                                    <td>
                                        <div class="table-rating">
                                            <i class="fas fa-star"></i>
                                            <span>4.8</span>
                                        </div>
                                    </td>
                                    <td><span class="status-badge completed">Completed</span></td>
                                    <td>
                                        <div class="table-actions">
                                            <button class="action-btn"><i class="fas fa-eye"></i></button>
                                            <button class="action-btn"><i class="fas fa-edit"></i></button>
                                            <button class="action-btn"><i class="fas fa-share-alt"></i></button>
                                            <div class="action-menu-trigger">
                                                <button class="action-btn"><i class="fas fa-ellipsis-v"></i></button>
                                                <div class="action-menu">
                                                    <a href="#"><i class="fas fa-copy"></i> Duplicate</a>
                                                    <a href="#"><i class="fas fa-download"></i> Download</a>
                                                    <a href="#" class="text-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="presentation-cell">
                                            <img src="https://via.placeholder.com/40?text=4" alt="Presentation thumbnail">
                                            <span>Digital Learning Tools</span>
                                        </div>
                                    </td>
                                    <td>Apr 5, 2025</td>
                                    <td>51</td>
                                    <td>
                                        <div class="table-rating">
                                            <i class="fas fa-star"></i>
                                            <span>4.6</span>
                                        </div>
                                    </td>
                                    <td><span class="status-badge completed">Completed</span></td>
                                    <td>
                                        <div class="table-actions">
                                            <button class="action-btn"><i class="fas fa-eye"></i></button>
                                            <button class="action-btn"><i class="fas fa-edit"></i></button>
                                            <button class="action-btn"><i class="fas fa-share-alt"></i></button>
                                            <div class="action-menu-trigger">
                                                <button class="action-btn"><i class="fas fa-ellipsis-v"></i></button>
                                                <div class="action-menu">
                                                    <a href="#"><i class="fas fa-copy"></i> Duplicate</a>
                                                    <a href="#"><i class="fas fa-download"></i> Download</a>
                                                    <a href="#" class="text-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a href="#presentations" class="view-all">View All Presentations <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-sections">
                <div class="footer-section">
                    <h3><i class="fas fa-file-powerpoint"></i> SlideCraft Pro</h3>
                    <p>The future of interactive presentations</p>
                    <div class="footer-social">

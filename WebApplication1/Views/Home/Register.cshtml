@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Slide AI</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/register.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="/js/script.js" defer></script>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <h1><i class="fas fa-file-powerpoint"></i> Slide AI</h1>
            </div>
            <ul class="nav-links">
                <li><a href="/Home/Index">Home</a></li>
                <li><a href="/Home/Presentations">Upload Presentation</a></li>
                <li><a href="/Home/Feedback">Evaluation Results</a></li>
                <li><a href="#how-it-works">How It Works</a></li>
                <li><a href="#features">Features</a></li>
                <li><a href="/Home/Index#contact">Contact</a></li>
                <li><a href="/Home/Login" class="login-link"><i class="fas fa-user"></i> Login</a></li>
            </ul>
            <div class="menu-toggle">
                <i class="fas fa-bars"></i>
            </div>
        </nav>
    </header>

    <main>
        <section class="register-section">
            <div class="register-container">
                <div class="section-header">
                    <h2 class="section-title">Create Account</h2>
                    <p class="section-subtitle">Join Slide AI to analyze and improve your presentations</p>
                </div>

                <div class="account-benefits">
                    <div class="benefit-item">
                        <i class="fas fa-chart-line"></i>
                        <h3>Personalized Analysis</h3>
                        <p>Get customized feedback to improve your presentation skills</p>
                    </div>
                    <div class="benefit-item">
                        <i class="fas fa-history"></i>
                        <h3>Track Progress</h3>
                        <p>Monitor your improvement over time with detailed analytics</p>
                    </div>
                </div>

                <form class="register-form" id="registerForm">
                    <div class="form-group">
                        <label for="fullName">Full Name</label>
                        <input type="text" id="fullName" name="fullName" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" id="email" name="email" required>
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <div class="password-input">
                            <input type="password" id="password" name="password" required>
                            <i class="fas fa-eye-slash toggle-password"></i>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <div class="password-input">
                            <input type="password" id="confirmPassword" name="confirmPassword" required>
                            <i class="fas fa-eye-slash toggle-password"></i>
                        </div>
                    </div>

                    <!-- User profile fields -->
                    <div class="user-profile-fields">
                        <div class="form-group">
                            <label for="profession">Profession/Industry</label>
                            <input type="text" id="profession" name="profession" placeholder="E.g., Marketing, Technology, Education">
                        </div>
                        <div class="form-group">
                            <label for="presentationGoals">Presentation Goals</label>
                            <select id="presentationGoals" name="presentationGoals">
                                <option value="">What are your main goals?</option>
                                <option value="business">Business Presentations</option>
                                <option value="academic">Academic Presentations</option>
                                <option value="sales">Sales Pitches</option>
                                <option value="general">General Improvement</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="checkbox-label">
                            <input type="checkbox" name="terms" required>
                            I agree to the <a href="#">Terms and Conditions</a> and <a href="#">Privacy Policy</a>
                        </label>
                    </div>

                    <button type="submit" class="submit-btn">Create Account</button>
                </form>

                <div class="auth-links">
                    <p>Already have an account? <a href="/Home/Login">Login here</a></p>
                </div>
            </div>
        </section>
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-sections">
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <a href="/Home/Index">Home</a>
                    <a href="/Home/Index#features">Features</a>
                    <a href="/Home/Index#contact">Contact</a>
                    <a href="/Home/Login">Login</a>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 Slide AI. All rights reserved.</p>
            </div>
        </div>
    </footer>
</body>
</html>
